<script>
    function navbarAnimation (navbar, navbarBrand, intro, navHeight) {
        var topScroll = $(window).scrollTop();
        if (navbar.length > 0 && intro.length > 0) {
            if(topScroll >= navHeight) {
                navbar.addClass('navbar-move');
                navbarBrand.css('display', 'block');
            } else {
                navbar.removeClass('navbar-move');
                navbarBrand.css('display', 'none');
            }
        }
    }
    $(document).ready(function() {
        $.material.init();

        var intro = $('#intro'),
            navbar      = $('.navbar'),
            navbarBrand = $('.navbar-brand'),
            navHeight   = navbar.height();
        navbarAnimation(navbar, navbarBrand, intro, navHeight);
        $(window).scroll(function() {
            navbarAnimation(navbar, navbarBrand, intro, navHeight);
        });
    });
</script>
